<?xml version="1.0" encoding="utf-8"?>
<com.baoyz.widget.PullRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pullRefresh"
    android:background="@drawable/gradiant_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NewUserActivity2">



        <Button
            android:id="@+id/button15_admin2"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonbackgroundgradiant"
            android:text="Add User"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText5_admin7" />




        <EditText
            android:id="@+id/editText5_admin5"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:background="@drawable/edittext_background"
            android:ems="10"
            android:hint="Salary Package (Rs):"
            android:inputType="numberSigned"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView9_admin5"
            app:layout_constraintStart_toStartOf="@+id/editText5_admin6"
            app:layout_constraintTop_toTopOf="@+id/textView9_admin5"
            app:layout_constraintVertical_bias="1.0" />

        <EditText
            android:id="@+id/editText5_admin2"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:background="@drawable/edittext_background"
            android:ems="10"
            android:hint="Designation:"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView9_admin2"
            app:layout_constraintStart_toStartOf="@+id/editText5_admin"
            app:layout_constraintTop_toTopOf="@+id/textView9_admin2" />

        <EditText
            android:id="@+id/editText5_admin7"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:background="@drawable/edittext_background"
            android:ems="10"
            android:hint="Password:"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView9_admin8"
            app:layout_constraintStart_toStartOf="@+id/editText5_admin8"
            app:layout_constraintTop_toTopOf="@+id/textView9_admin8" />

        <EditText
            android:id="@+id/editText5_admin8"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:background="@drawable/edittext_background"
            android:ems="10"
            android:hint="Username:"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView9_admin7"
            app:layout_constraintStart_toStartOf="@+id/editText5_admin5"
            app:layout_constraintTop_toTopOf="@+id/textView9_admin7" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:background="#00000000"
            app:layout_constraintBottom_toBottomOf="@+id/editText5_admin6"
            app:layout_constraintStart_toEndOf="@+id/editText5_admin6"
            app:layout_constraintTop_toTopOf="@+id/editText5_admin6"
            app:srcCompat="@drawable/add_circle_outline_black_24dp"
            tools:ignore="VectorDrawableCompat" />

        <Spinner
            android:id="@+id/editText5_admin6"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:background="@drawable/edittext_background"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView9_admin6"
            app:layout_constraintStart_toStartOf="@+id/editText5_admin2"
            app:layout_constraintTop_toTopOf="@+id/textView9_admin6" />

        <TextView
            android:id="@+id/textView2_admin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Employee Information"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView9_admin4"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="Joining Date:"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/editText5_admin"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2_admin" />

        <TextView
            android:id="@+id/textView9_admin5"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Salary Pck:"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView9_admin6"
            app:layout_constraintTop_toBottomOf="@+id/textView9_admin6" />

        <TextView
            android:id="@+id/textView9_admin2"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Designation:"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView9_admin4"
            app:layout_constraintTop_toBottomOf="@+id/textView9_admin4" />

        <TextView
            android:id="@+id/textView9_admin6"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Department:"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView9_admin2"
            app:layout_constraintTop_toBottomOf="@+id/textView9_admin2" />

        <TextView
            android:id="@+id/textView9_admin7"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Username:"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView9_admin5"
            app:layout_constraintTop_toBottomOf="@+id/textView9_admin5" />


        <TextView
            android:id="@+id/textView9_admin8"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Password"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView9_admin7"
            app:layout_constraintTop_toBottomOf="@+id/textView9_admin7" />

        <TextView
            android:id="@+id/editText5_admin"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:background="@drawable/edittext_background"
            android:hint="Joining Date:"
            android:padding="10dp"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView9_admin4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView9_admin4"
            app:layout_constraintTop_toTopOf="@+id/textView9_admin4" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
</com.baoyz.widget.PullRefreshLayout>