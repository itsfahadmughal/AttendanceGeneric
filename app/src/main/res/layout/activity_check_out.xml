<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/gradiant_background"
    android:layout_height="match_parent"
    tools:context=".CheckInActivity"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CheckInActivity">

        <ImageView
            android:id="@+id/imageView3_out"
            android:layout_width="250dp"
            android:layout_height="400dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <Button
            android:id="@+id/button7_out"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:text="Capture Image"
            android:background="@drawable/buttonbackgroundgradiant"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3_out" />

        <Button
            android:id="@+id/button8_out"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonbackgroundgradiant"
            android:padding="10dp"
            android:text="Check-Out"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/button7_out"
            app:layout_constraintEnd_toEndOf="@+id/button7_out"
            app:layout_constraintStart_toStartOf="@+id/button7_out"
            app:layout_constraintTop_toTopOf="@+id/button7_out" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>