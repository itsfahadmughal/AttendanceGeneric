<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant_background"
    tools:context=".PayrollActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2_payroll"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Payroll Detail"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Recent Salary Date"
            android:background="@color/colorAccent"
            android:textColor="#000000"
            android:textSize="20dp"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/date_salary"
                android:text="FromDate: "
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_height="50dp"/>
            <TextView
                android:id="@+id/salary"
                android:text="To Date: "
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_height="50dp"/>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Recent Salary Received"
            android:background="@color/colorAccent"
            android:textColor="#000000"
            android:textSize="20dp"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/date_advance"
                android:text="Salary Amount : "
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_height="50dp"/>
            <TextView
                android:id="@+id/advance"
                android:text="Amount Rs"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_height="50dp"/>
        </LinearLayout>




        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Salary Detail"
            android:background="@color/colorAccent"
            android:textColor="#000000"
            android:textSize="20dp"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/cash"
                android:text="Cash : "
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_height="50dp"/>
            <TextView
                android:id="@+id/cheque"
                android:text="Checque : "
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_height="50dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Loan Deduction"
            android:background="@color/colorAccent"
            android:textColor="#000000"
            android:textSize="20dp"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/date_loan"
                android:text="Loan Amount : "
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_height="50dp"/>
            <TextView
                android:id="@+id/loan"
                android:text="Amount Rs"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_height="50dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Days Detail"
            android:background="@color/colorAccent"
            android:textColor="#000000"
            android:textSize="20dp"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:text="Salary Paid Days : "
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_height="50dp"/>
            <TextView
                android:id="@+id/totaldays"
                android:text="Days"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_height="50dp"/>
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>